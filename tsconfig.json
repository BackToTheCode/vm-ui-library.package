{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "strict": true,
    "sourceMap": true,  
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx"
],
  "include": ["components/**/*", "typings/custom.d.ts"]
}
